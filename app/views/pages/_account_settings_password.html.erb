<div class="tab-pane fade show text-center" id="tab-password" role="tabpanel">

  <h3 class="text-center text-warning font-italic font-weight-bold"><%= t("settings_profile") %></h3>
  <div class="row m-0 p-0 justify-content-center pb-3">
      <div class="col-1 border-top border-warning"></div>
      <div class="col-12 m-0 p-0 text-center text-muted font-sm pt-3">
        <%= t("settings_password_description") %>
      </div>
  </div>

  <div class="row m-0 p-0 justify-content-center pb-3">
      <div class="col-12 m-0 p-0 text-center text-danger font-sm pt-3">
        <%= t("password_logout_disclaimer") %>
      </div>
  </div>

  <!-- FORM ROW -->
  <div class="row m-0 p-0 justify-content-center">
    <div class="col-12 m-0 p-0">

      <%= form_with(model: User, method: "post", url: account_password_path) do |f| %>

        <!-- new password -->
        <div class="input-group py-2">
          <div class="input-group-prepend">
            <div class="input-group-text bg-secondary text-dark">
              new password:
            </div>
          </div>
          <%= f.password_field :new_password, class: "form-control bg-dark text-warning", required: "required", placeholder: t("placeholder_new_pass") %>
        </div>

        <!-- new password confirmation -->
        <div class="input-group py-2">
          <div class="input-group-prepend">
            <div class="input-group-text bg-secondary text-dark">
              confirm new password:
            </div>
          </div>
          <%= f.password_field :new_password_confirmation, class: "form-control bg-dark text-warning", required: "required", placeholder: t("placeholder_confirm_new_pass") %>
        </div>

        <!-- SEPARATOR -->
        <div class="form-group row justify-content-center">
          <div class="col-2 border-bottom border-warning">
          </div>
        </div>

        <!-- current password -->
        <div class="input-group pb-2">
          <div class="input-group-prepend">
            <div class="input-group-text bg-secondary text-dark">
              current password:
            </div>
          </div>
          <%= f.password_field :password, class: "form-control bg-dark text-warning", required: "required", placeholder: t("placeholder_current_pass") %>
        </div>

        <!-- SUBMIT -->
        <%= f.submit t("save_settings_button"), class: "btn btn-sm btn-outline-success mt-3" %>

      <% end %>

    </div>
  </div>
  <!-- END OF FORM ROW -->

</div>
